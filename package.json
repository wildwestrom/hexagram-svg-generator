{
    "scripts": {
        "deps": "yarn install",
        "build:css": "export NODE_ENV=production && postcss src/css/main.css -o public/css/main.css",
        "build:app": "shadow-cljs release app",
        "release": "run-s build:css build:app;",
        "watch:css": "postcss src/css/main.css -o public/css/main.css --watch",
        "watch:app": "shadow-cljs watch app",
        "watch": "run-p watch:css watch:app",
        "clean": "rm -rf public/js/compiled"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^4.0.3",
        "@tailwindcss/line-clamp": "^0.2.0",
        "@tailwindcss/typography": "^0.4.0",
        "autoprefixer": "^10.2.3",
        "cssnano": "^5.0.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.5",
        "postcss-cli": "^8.3.1",
        "postcss-import": "^14.0.0",
        "tailwindcss": "^2.2.4"
    },
    "dependencies": {
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "shadow-cljs": "2.14.6"
    }
}
